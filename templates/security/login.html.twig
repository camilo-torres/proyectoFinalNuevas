{% extends 'base.html.twig' %}


    {% block stylesheets %}
        <link href="asset/css/loginStyle.css"  rel="stylesheet" />
        {#<link href="bootstrap/dist/css/bootstrap.min.css"  rel="stylesheet" />#}

    {% endblock %}



{% block title %}Log in!{% endblock %}

{% block body %}
<body>
<header>
        <img id="logo" src="asset/images/logo.png">
        <h3 class="titulo">Umbrella Corps.</h3>
</header>

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Inicie sesion para continuar</h1>
    <label for="inputUsername">Usuario: </label>
    <input class="campo" type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
    <br><br>
    <label for="inputPassword">Contrase√±a: </label>
    <input class="campo" type="password" name="password" id="inputPassword" class="form-control" required>

    <br><br>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="boton" type="submit">
        Iniciar sesion
    </button>
</form>
</body>
{% endblock %}
