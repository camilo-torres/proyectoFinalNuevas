{% extends 'base.html.twig' %}

{% block title %}Empleados{% endblock %}

{% block body %}
    <h1>Empleados</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Fecha_nacimiento</th>
                <th>Rol</th>
                <th>Usuario</th>
                <th>Contrasena</th>
                <th>IdJefe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empleado in empleados %}
            <tr>
                <td>{{ empleado.id }}</td>
                <td>{{ empleado.nombre }}</td>
                <td>{{ empleado.apellido }}</td>
                <td>{{ empleado.fechaNacimiento ? empleado.fechaNacimiento|date('Y-m-d') : '' }}</td>
                <td>{{ empleado.rol }}</td>
                <td>{{ empleado.usuario }}</td>
                <td>{{ empleado.contrasena }}</td>
                <td>{{ empleado.idJefe }}</td>
                <td>
                    <a href="{{ path('empleado_show', {'id': empleado.id}) }}">Detalles</a>
                    <a href="{{ path('empleado_edit', {'id': empleado.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">No hay empleados registrados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('home') }}">Volver</a>



{% endblock %}
